/* plugin/components/live-tabs/index.wxss */
.wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.tabs-nav {
  display: flex;
  position: relative;
  border-bottom: 1rpx solid #eee;
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: rgba(0, 0, 0, .5);
  transition: color 0.3s;
  position: relative;
  z-index: 2;
}

.nav-item--active {
  color: #007AFF; /* 激活状态颜色 */
}

.nav-slider {
  position: absolute;
  bottom: 0;
  height: 4rpx;
  background-color: #007AFF; /* 指示条颜色 */
  transition: transform 0.3s ease;
}

.tabs-content {
  flex: 1;
}

.swiper-item-content {
  height: 100%;
}
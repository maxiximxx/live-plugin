/* plugin/components/live-player/live-player.wxss */

.live-player {
  width: 100%;
  height: 100%;
  position: relative;
}

.control-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.btn {
  color: white;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  margin: 0 20rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.error-toast {
	width: 100%;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	text-align: center;
}